@model Araba.Models.Model

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
            <br>
            <!-- Filtreleme Kısmı -->
            <div class="card text-bg-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header" style="text-align:center">ARABA FİLTRELEME</div>
                <div class="card-body">
                    <form class="row">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Az :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Az (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Çok :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Çok (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Şehir :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Şehir">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Durum :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Durum">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Marka :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Marka">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Model :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Model">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-primary col-12"><i class="bi bi-funnel"></i> FİLTRELE</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Model Ekle</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.ModelAd,"Model Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ModelAd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ModelAd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MarkaId, "Marka Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MarkaId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MarkaId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ekle" class="btn btn-success" />
                            @Html.ActionLink("Model Listesi", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
                }


            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
