@model Araba.Models.SifreDegistirme
@{
    ViewBag.Title = "ChangePassword";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
            <br>
            <!-- Filtreleme Kısmı -->
            @Html.Action("PartialFiltre", "Home")
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Şifre Değiştir</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "row" }))
                {

                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Eski Şifre :</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword,new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Yeni Şifre :</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şifre Tekrar :</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.ConNewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary col-6"><i class="bi bi-pencil"></i> Şifre Değiştir</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>

