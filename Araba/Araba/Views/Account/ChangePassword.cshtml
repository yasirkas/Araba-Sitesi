@model Araba.Models.SifreDegistirme
@{
    ViewBag.Title = "ChangePassword";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
            <br>
            <!-- Filtreleme Kısmı -->
            <div class="card text-bg-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header" style="text-align:center">ARABA FİLTRELEME</div>
                <div class="card-body">
                    <form class="row">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Az :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Az (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Çok :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Çok (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Şehir :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Şehir">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Durum :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Durum">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Marka :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Marka">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Model :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Model">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-primary col-12"><i class="bi bi-funnel"></i> FİLTRELE</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Şifre Değiştir</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "row" }))
                {

                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Eski Şifre :</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Yeni Şifre :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şifre Tekrar :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary col-6"><i class="bi bi-pencil"></i> Şifre Değiştir</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>

