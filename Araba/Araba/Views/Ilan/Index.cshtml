@model IEnumerable<Araba.Models.Ilan>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
            <br>
            <!-- Filtreleme Kısmı -->
            <div class="card text-bg-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header" style="text-align:center">ARABA FİLTRELEME</div>
                <div class="card-body">
                    <form class="row">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Az :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Az (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">En Çok :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="En Çok (Fiyat)">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Şehir :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Şehir">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Durum :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Durum">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Marka :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Marka">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label">Model :</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Model">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-primary col-12"><i class="bi bi-funnel"></i> FİLTRELE</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">İlan Listesi</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />
                <table class="table">
                    <tr>
                        <th>
                            Marka
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Durum
                        </th>
                        
                        <th>
                            Şehir
                        </th>
                        
                        <th>
                            Fiyat
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model.Marka.MarkaAd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model.ModelAd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Durum.DurumAd)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Sehir.SehirAd)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Fiyat)
                        </td>


                        <td>
                            <a class="btn btn-success" href="@Url.Action("Images",new { id = item.IlanId })"><i class="bi bi-camera"></i> Resim Ekle</a>
                            <a class="btn btn-primary" href="@Url.Action("Edit",new { id = item.IlanId })"><i class="bi bi-pencil"></i> Düzenle</a>
                            <a class="btn btn-danger" href="@Url.Action("Delete",new { id = item.IlanId })"><i class="bi bi-trash"></i> Sil</a>
                        </td>
                    </tr>
                    }

                </table>


            </div>
        </div>

    </div>
</div>

